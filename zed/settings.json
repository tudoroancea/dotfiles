{
	// Editor
	"tab_size": 2,
	"pane_split_direction_vertical": "right",
	"pane_split_direction_horizontal": "down",
	"show_completions_on_input": true,
	"show_completion_documentation": true,
	"soft_wrap": "none",
	"relative_line_numbers": true,
	"inlay_hints": {
		"enabled": true,
		"show_parameter_hints": true,
		"show_other_hints": true
	},
	"show_signature_help_after_edits": true,
	// UI
	"unstable.ui_density": "compact",
	"tab_bar": {
		"show": true,
		"show_nav_history_buttons": false
	},
	"toolbar": {
		"breadcrumbs": true,
		"quick_actions": true
	},
	// Fonts
	"buffer_font_size": 12.0,
	"ui_font_size": 14,
	"buffer_font_family": "JetBrainsMono Nerd Font",
	"ui_font_family": "JetBrainsMono Nerd Font",
	"terminal": {
		"font_family": "JetBrainsMono Nerd Font",
		"detect_venv": "off"
	},
	// Keymap
	"vim_mode": true,
	"vim": {
		"use_system_clipboard": "always",
		"use_smartcase_find": true
	},
	// Color theme
	"theme": {
		"mode": "system",
		"light": "Zed Legacy: Rosé Pine Dawn",
		"dark": "Zed Legacy: Rosé Pine Moon"
	},
	"icon_theme": "Catppuccin Latte",
	"experimental.theme_overrides": {
		"syntax": {
			"comment": {}
		}
	},
	// Extensions
	"auto_install_extensions": {
		// themes
		"zed-legacy-themes": true,
		"catppuccin-icons": true,
		// git
		"git-firefly": true,
		// LSPs
		"typst": true,
		// file formats
		"toml": true,
		"lua": true,
		"sql": true,
		"log": true,
		"matlab": true
	},
	// LSP
	"enable_language_server": true,
	"languages": {
		"YAML": {
			"tab_size": 2
		},
		"TypeScript": {
			"formatter": [
				{
					"language_server": {
						"name": "biome"
					}
				},
				{ "code_action": "source.organizeImports.biome" }
			]
		},
		"TSX": {
			"formatter": [
				{
					"language_server": {
						"name": "biome"
					}
				},
				{ "code_action": "source.organizeImports.biome" }
			]
		},
		"JSON": {
			"tab_size": 2,
			"formatter": {
				"language_server": {
					"name": "biome"
				}
			}
		},
		"JSONC": {
			"tab_size": 2,
			"formatter": {
				"language_server": {
					"name": "biome"
				}
			}
		},
		"XML": {
			"tab_size": 2
		},
		"Python": {
			"format_on_save": "off",
			"language_servers": ["basedpyright", "!ty", "ruff"],
			"formatter": [
				{ "code_action": "source.organizeImports.ruff" },
				{ "language_server": { "name": "ruff" } }
			]
		},
		"C": {
			"format_on_save": "on"
		},
		"C++": {
			"format_on_save": "on"
		}
	},
	"lsp": {
		"pyrefly": {
			"binary": {
				"path": "/Users/tudoroancea/.local/bin/pyrefly",
				"arguments": ["lsp"]
			}
		},
		"tinymist": {
			"initialization_options": {
				"exportPdf": "onSave",
				"formatterMode": "typstyle"
			}
		}
	},
	// Remote
	"ssh_connections": [
		{
			"host": "thebeauty",
			"projects": [
				{
					"paths": ["/home/ted/dev/anvil"]
				},
				{
					"paths": ["/home/ted/dev/anvil/examples"]
				},
				{
					"paths": ["/home/ted/dev/stablehlo"]
				},
				{
					"paths": ["~/dev"]
				},
				{
					"paths": ["~/dev/blasfeo"]
				},
				{
					"paths": ["~/dev/brains2"]
				},
				{
					"paths": ["~/dev/nanoGPT"]
				},
				{
					"paths": ["~/dev/ngpt"]
				},
				{
					"paths": ["~/dev/pymanopt"]
				},
				{
					"paths": ["~/dev/tadam"]
				}
			]
		}
	],
	// AI
	"show_edit_predictions": true,
	"edit_predictions": {
		"disabled_globs": ["*.mlir"],
		"mode": "subtle",
		"enabled_in_text_threads": true
	},
	"features": {
		"edit_prediction_provider": "zed"
	},
	"agent": {
		"play_sound_when_agent_done": true,
		"enabled": true,
		"default_model": {
			"provider": "zed.dev",
			"model": "claude-sonnet-4"
		},
		"inline_assistant_model": {
			"provider": "zed.dev",
			"model": "claude-sonnet-4"
		},
		"commit_message_model": {
			"provider": "copilot_chat",
			"model": "gpt-4.1"
		},
		"profiles": {
			"planner": {
				"name": "Planner",
				"tools": {
					"batch_tool": false
				},
				"enable_all_context_servers": false,
				"context_servers": {}
			},
			"write": {
				"name": "Write",
				"tools": {
					"open": true,
					"create_directory": true,
					"terminal": true,
					"batch_tool": true,
					"code_actions": true,
					"code_symbols": true,
					"copy_path": false,
					"create_file": true,
					"delete_path": false,
					"diagnostics": true,
					"edit_file": true,
					"fetch": true,
					"list_directory": false,
					"move_path": true,
					"now": true,
					"find_path": true,
					"read_file": true,
					"grep": true,
					"rename": true,
					"symbol_info": true,
					"thinking": true
				},
				"enable_all_context_servers": true,
				"context_servers": {}
			},
			"ask": {
				"name": "Ask",
				"tools": {
					"symbol_info": true,
					"diagnostics": true,
					"fetch": true,
					"list_directory": false,
					"now": true,
					"find_path": true,
					"read_file": true,
					"grep": true,
					"thinking": true,
					"terminal": true
				},
				"enable_all_context_servers": false,
				"context_servers": {}
			}
		},
		"always_allow_tool_actions": false,
		"default_profile": "ask",
		"button": true,
		"default_width": 480,
		"dock": "right"
	},
	// Git
	"git": {
		"hunk_style": "staged_hollow",
		"git_gutter": "tracked_files",
		"inline_blame": {
			"enabled": true,
			"show_commit_summary": true,
			"delay_ms": 500
		}
	},
	// Misc
	"telemetry": {
		"diagnostics": false,
		"metrics": false
	},
	"auto_update": true,
	"autosave": "on_focus_change"
}
