 ],
	// AI
	"show_edit_predictions": true,
	"edit_predictions": {
		"disabled_globs": ["*.mlir"],
		"mode": "subtle",
		"enabled_in_text_threads": true
	},
	"features": {
		"edit_prediction_provider": "zed"
	},
	"agent": { "enabled": true },
	// Git
	"git": {
		"hunk_style": "staged_hollow",
		"git_gutter": "tracked_files",
		"inline_blame": {
			"enabled": true,
			"show_commit_summary": true,
			"delay_ms": 500
		}
	},
	// Misc
	"telemetry": {
		"diagnostics": false,
		"metrics": false
	},
	"auto_update": true,
	"autosave": "on_focus_change"
}
