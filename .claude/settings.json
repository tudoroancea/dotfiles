{
  "$schema": "https://json.schemastore.org/claude-code-settings.json",
  "permissions": {
    "allow": [
      "WebSearch",
      "Bash(uv run python:*)",
      "Bash(uv run pytest:*)",
      "Bash(find:*)",
      "Bash(fd:*)",
      "Bash(grep:*)",
      "Bash(rg:*)",
      "Bash(bun add:*)"
    ],
    "deny": [
      "Bash(bun run dev:*)",
      "Bash(bun run serve:*)",
      "Bash(bun run preview:*)",
      "Bash(bun dev:*)",
      "Bash(vite dev:*)",
      "Bash(vite preview:*)"
    ],
    "ask": [
      "Bash(uv pip install:*)",
      "Bash(uv sync)",
      "Bash(uv add:*)"
    ],
    "defaultMode": "default"
  },
  "hooks": {
    "Stop": [
      {
        "hooks": [
          {
            "type": "command",
            "command": "open -g \"raycast://extensions/raycast/raycast/confetti\""
          }
        ]
      }
    ]
  },
  "statusLine": {
    "type": "command",
    "command": "~/.claude/status-line.sh"
  },
  "enabledPlugins": {
    "context7@claude-plugins-official": true,
    "clangd-lsp@claude-plugins-official": true,
    "pyright-lsp@claude-plugins-official": true
  },
  "syntaxHighlightingDisabled": false,
  "model": "haiku"
}
