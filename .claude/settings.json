{
  "permissions": {
    "allow": [
      "WebSearch",
      "Fetch(https://raw.githubusercontent.com:*)",
      "Bash(uv run python:*)",
      "Bash(find:*)",
      "Bash(fd:*)",
      "Bash(grep:*)",
      "Bash(rg:*)",
      "Bash(bun add:*)"
    ],
    "deny": [
      "Bash(uv add:*)",
      "Bash(bun run dev:*)",
      "Bash(bun run serve:*)",
      "Bash(bun dev:*)",
      "Bash(vite dev:*)",
      "Bash(vite preview:*)"
    ],
    "ask": [
      "Bash(uv pip install:*)"
    ]
  },
  "model": "opus",
  "hooks": {
    "Stop": [
      {
        "hooks": [
          {
            "type": "command",
            "command": "open \"raycast://extensions/raycast/raycast/confetti\""
          }
        ]
      }
    ]
  },
  "statusLine": {
    "type": "command",
    "command": "bunx ccusage statusline",
    "padding": 0
  },
  "enabledPlugins": {
    "frontend-design@claude-code-plugins": true
  },
  "alwaysThinkingEnabled": false
}
